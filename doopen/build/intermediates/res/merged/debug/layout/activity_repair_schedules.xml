<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.air.doopen.hy.Repair_scheduleActivity"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#6C8BC7" >

        <Button
            android:id="@+id/air_repairs_schedule_return"
            android:layout_width="35dp"
            android:onClick="air_repairs_schedule_returnonclick"
            android:layout_height="35dp"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/result" />


        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="报修进度详情"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:typeface="serif" />
    </RelativeLayout>

    <TextView
        android:id="@+id/reqair_sch_text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/reqair_sch_text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"     
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/reqair_sch_text_progress"
        android:layout_width="wrap_content"      
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>