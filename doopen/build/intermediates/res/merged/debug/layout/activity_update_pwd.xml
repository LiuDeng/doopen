<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdatePwdActivity" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/qianhuise" >

        <Button
            android:id="@+id/devshare_result_msg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/result" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/update_pwd_tilte"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@color/shenhuise" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout1"
        android:background="#ffffff"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/update_pwd_old_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="请输入旧密码"
            android:padding="15dp"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:password="true"
            android:singleLine="true"
            android:textScaleX="1" />

        <EditText
            android:id="@+id/update_pwd_new_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="请输入新的密码"
            android:padding="15dp"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:password="true"
            android:singleLine="true"
            android:textScaleX="1" />

        <EditText
            android:id="@+id/update_pwd_newto_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:freezesText="true"
            android:gravity="center_vertical"
            android:hint="确认新的密码"
            android:padding="15dp"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:password="true"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textScaleX="1" />

        <Button
            android:id="@+id/update_pwd_new_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/smssdk_btn_enable"
            android:text="确认修改"
            android:textColor="#fff" />
    </LinearLayout>

</RelativeLayout>