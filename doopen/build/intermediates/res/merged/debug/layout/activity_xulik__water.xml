                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="-5dp"
                                android:layout_weight="8" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:checked="false"
                                    android:text="强冲"
                                    android:textColor="@color/white" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="-10dp"
                                android:layout_weight="2" >

                                <cn.air.doopen.view.RippleBackground
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/xulik_content2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    app:rb_color="#ffffff"
                                    app:rb_duration="1000"
                                    app:rb_radius="10dp"
                                    app:rb_rippleAmount="3"
                                    app:rb_scale="10" >

                                    <ToggleButton
                                        android:id="@+id/xulik_Switch_btn"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:layout_centerHorizontal="true"
                                        android:background="@drawable/togglebutton4"
                                        android:checked="false"
                                        android:gravity="center_vertical|center_horizontal"
                                        android:textColor="@color/white"
                                        android:textOff=""
                                        android:textOn="" />
                                </cn.air.doopen.view.RippleBackground>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/text_xulik_text2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="-5dp"
                                android:layout_weight="8" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:checked="false"
                                    android:text="电源"
                                    android:textColor="@color/white" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5.3"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical" >

                <cn.air.doopen.view.MySinkingView
                    android:id="@+id/sinking_desalt"
                    android:layout_width="110dp"
                    android:layout_height="110dp" >

                    <cn.air.doopen.view.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/charming3" />
                </cn.air.doopen.view.MySinkingView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>