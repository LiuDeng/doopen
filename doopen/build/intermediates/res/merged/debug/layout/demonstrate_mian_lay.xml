<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/dadsf"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:background="@color/qianhuise" >

        <LinearLayout
            android:id="@+id/geshou"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" >

            <Button
                android:id="@+id/shouchang_button2"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/btn_style_four_focused"
                android:text="基本"
                android:textColor="#000000"
                android:textSize="15dp" />

            <Button
                android:id="@+id/shouchang_button"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/btn_style_four_normal"
                android:text="三色灯"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

        <Button
            android:id="@+id/seting_imgbtn_led"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/settings" />

        <Button
            android:id="@+id/share_imbtn_dev_led"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/textView4"
            android:background="@drawable/share_login" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/shouchang_viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dadsf" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/shouchang_viewpager"
        android:background="@color/shenhuise" />

</RelativeLayout>